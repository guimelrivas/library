<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<!--table link-->
<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %> </th>
      <th><%= sort_link(@q, :category) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

<%= search_form_for(@q) do |f| %>
  <%= f.label         :title_cont %>
  <%= f.search_field  :title_cont %>
  
  <%= f.label         :category_eq %>
  <%= f.search_field  :category_eq %>

  <%= f.submit %>
<% end %>

<!--paginate superior-->
<%= paginate(@books) %>


<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>


